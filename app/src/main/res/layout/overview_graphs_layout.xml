<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_graph_hr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:alpha="0.7"
        android:text="Frecuencia cardíaca" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/heartR_graph"
        android:layout_width="wrap_content"
        android:layout_height="125dp" />

    <TextView
        android:id="@+id/tv_graph_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:alpha="0.7"
        android:text="Pasos" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/steps_graph"
        android:layout_width="wrap_content"
        android:layout_height="125dp" />

    <TextView
        android:id="@+id/tv_graph_calorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:alpha="0.7"
        android:text="Calorías" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/calories_graph"
        android:layout_width="wrap_content"
        android:layout_height="125dp" />

    <LinearLayout
        android:id="@+id/iob_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>