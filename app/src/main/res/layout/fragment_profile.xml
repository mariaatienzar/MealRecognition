<?xml version="1.0" encoding="utf-8"?>



<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/layoutHead"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/green"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_view"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/ic_user" />


        </LinearLayout>





        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_below="@id/layoutHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent">





            <androidx.cardview.widget.CardView
                android:id="@+id/detailed_cardview2"
                style="@style/CardViewUsual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailed_cardview1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">



                    <EditText
                        android:id="@+id/text_weight"
                        android:hint="Peso  "
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/icons8_edit"
                        android:drawablePadding="12dp"
                        android:enabled="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="23dp"
                         android:layout_marginEnd="186dp"
                        android:text="(kg)"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/text_height"
                        android:layout_width="325dp"
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"

                        android:drawableLeft="@drawable/icons8_edit"
                        android:layout_below="@+id/text_weight"
                        android:drawablePadding="12dp"
                        android:enabled="true"
                        android:hint="Altura "
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/text_weight"
                        android:layout_marginTop="23dp"
                        android:layout_marginEnd="176dp"
                        android:text="(cm)"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/text_height"
                        android:layout_marginTop="23dp"
                        android:layout_marginEnd="170dp"
                        android:text="(años)"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                    <EditText
                        android:id="@+id/text_age"
                        android:textSize="16dp"

                        android:hint="Edad"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/text_height"

                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/icons8_edit"
                        android:drawablePadding="12dp"
                        android:enabled="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


                    <EditText
                        android:id="@+id/text_sex"
                        android:hint="Sexo"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_below="@id/text_age"

                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/icons8_edit"
                        android:drawablePadding="12dp"
                        android:enabled="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
                    <EditText
                        android:id="@+id/text_IRC"
                        android:textSize="16dp"
                        android:hint="Relación Insulina-HC (Ej:1:10)"
                        android:layout_width="match_parent"
                        android:layout_below="@id/text_sex"
                        android:labelFor="@id/text_IRC"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/icons8_edit"
                        android:drawablePadding="12dp"
                        android:enabled="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
                    <EditText
                        android:id="@+id/text_factorCorrec"
                        android:textSize="16dp"
                        android:hint="Factor Corrección Insulina "
                        android:layout_width="match_parent"
                        android:layout_below="@id/text_IRC"
                        android:labelFor="@id/text_factorCorrec"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/icons8_edit"
                        android:drawablePadding="12dp"
                        android:enabled="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/text_IRC"
                        android:layout_marginTop="23dp"
                        android:layout_marginEnd="10dp"
                        android:text="(mg/dl)"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/green"
                android:layout_marginTop="15dp"
                android:text="Actualizar datos"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:visibility="invisible" />








        </LinearLayout>
        </ScrollView>



    </LinearLayout>

</layout>